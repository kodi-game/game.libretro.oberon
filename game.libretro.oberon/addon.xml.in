<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.oberon"
		name="Oberon RISC Emulator"
		version="0.0.1.3"
		provider-name="Peter De Wachter, Emery Hemingway">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>dsk</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Oberon RISC Emulator</summary>
		<description lang="en_GB">Supported files: .dsk</description>
		<license>ISC</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.oberon</source>
	</extension>
</addon>
